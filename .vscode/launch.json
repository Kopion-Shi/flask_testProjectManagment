  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Python 调试程序: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": { "FLASK_APP": "service/run.py", 
                "FLASK_DEBUG": "1",
                "FLASK_RUN_HOST": "0.0.0.0",  // 设置IP地址为0.0.0.0，这样你的应用将监听所有可用的网络接口  
                "FLASK_RUN_PORT": "5000"      // 设置端口号为5000，你可以根据需要更改这个值  
    },
      "args": ["run"],
      "jinja": true,
      "autoStartBrowser": false
    }
  ]
}
